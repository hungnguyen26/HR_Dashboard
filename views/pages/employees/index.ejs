<div class="mt-5">
  <div class="row">
    <div class="col-12 mx-auto">
      <div class="d-flex justify-content-between">
        <h4>Quản Lý Nhân Viên</h4>
        <div>
          <a href="/employees/create" class="btn btn-primary">Thêm Nhân Viên</a>
          <%- include('../../partials/alert', { messages: messages, time: "5000" }) %>
        </div>
      </div>
      
      <hr />

      <div class="card mb-3">
        <div class="card-header">Bộ lọc và tìm kiếm</div>
        <div class="card-body">
          <form id="filter-form" action="/employees" method="GET">
            <div class="form-row">
              <div class="form-group col-md-2">
                <label for="EmployeeID">Mã NV</label>
                <input type="text" class="form-control" id="EmployeeID" name="EmployeeID"
                       value="<%= query?.EmployeeID || '' %>" placeholder="Nhập ID">
              </div>
      
              <div class="form-group col-md-3">
                <label for="FullName">Họ tên</label>
                <input type="text" class="form-control" id="FullName" name="FullName"
                       value="<%= query?.FullName || '' %>" placeholder="Nhập tên">
              </div>
              <div class="form-group col-md-3">
                <label for="DepartmentID">Phòng ban</label>
                <select class="form-control" id="DepartmentID" name="DepartmentID">
                  <option value="">Tất cả</option>
                  <% departments.forEach(dept => { %>
                    <option value="<%= dept.DepartmentID %>" <%= query?.DepartmentID == dept.DepartmentID ? 'selected' : '' %>>
                      <%= dept.DepartmentName %>
                    </option>
                  <% }) %>
                </select>
              </div>
              <div class="form-group col-md-3">
                <label for="PositionID">Chức vụ</label>
                <select class="form-control" id="PositionID" name="PositionID">
                  <option value="">Tất cả</option>
                  <% positions.forEach(pos => { %>
                    <option value="<%= pos.PositionID %>" <%= query?.PositionID == pos.PositionID ? 'selected' : '' %>>
                      <%= pos.PositionName %>
                    </option>
                  <% }) %>
                </select>
              </div>
              <div class="form-group col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Tìm</button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <hr />

      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Họ Tên</th>
            <th scope="col">Ngày sinh</th>
            <th scope="col">Giới tính</th>
            <th scope="col">Email</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Tên phòng ban</th>
            <th scope="col">Chức vụ</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Hoạt động</th>
          </tr>
        </thead>
        <tbody>
          <% cleanEmployees.forEach(employee => { %>
            <tr>
              <td><%= employee.EmployeeID %></td>
              <td><%= employee.FullName %></td>
              <td><%= employee.DateOfBirth %></td>
              <td><%= employee.Gender %></td>
              <td><%= employee.Email %></td>
              <td><%= employee.PhoneNumber %></td>
              <td><%= employee.DepartmentName %></td>
              <td><%= employee.PositionName %></td>
              <td><%= employee.Status %></td>
              <td>
                <a href="/employees/<%= employee.EmployeeID %>" class="btn btn-success" style="font-size: xx-small;">
                  <i class="fa-solid fa-eye"></i>
                </a>
                <a href="/employees/edit/<%= employee.EmployeeID %>" class="btn btn-warning mx-2" style="font-size: xx-small;">
                  <i class="fa-solid fa-pen-nib"></i>
                </a>
                <a href="/employees/delete/<%= employee.EmployeeID %>" class="btn btn-danger" style="font-size: xx-small;">
                  <i class="fa-solid fa-trash"></i>
                </a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <nav>
        <ul class="pagination">
          <li class="page-item active">
            <button
              class="page-link"
              button-pagination="1"
              fdprocessedid="x68la"
            >
              1
            </button>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>
