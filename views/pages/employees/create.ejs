<div class="mt-5">
    <div class="row">
      <div class="col-12 mx-auto">
        <div class="d-flex justify-content-between">
          <h4>Thêm nhân viên</h4>
        </div>
  
        <hr />
        <form action="/employees/create" method="POST" style="width: 40%; margin: 0 auto;">
          <div class="form-group">
            <label for="departmentName">Tên nhân viên</label>
            <input type="text" class="form-control" id="departmentName" name="departmentName" placeholder="Nhập tên nhân viên" required>
          </div>
  
          <div class="form-group">
            <label for="managerId">ID người quản lý (nếu có)</label>
            <input type="number" class="form-control" id="managerId" name="managerId" placeholder="Nhập ID người quản lý">
          </div>
  
          <button type="submit" class="btn btn-primary">Thêm nhân viên</button>
        </form>
      </div>
    </div>
  </div>
  