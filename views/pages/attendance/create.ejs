<div class="mt-5">
  <div class="row">
    <div class="col-12 mx-auto">
      <div class="d-flex justify-content-between">
        <h4>Thêm chấm công</h4>
        <%- include('../../partials/alert', { messages: messages, time: "5000" }) %>
      </div>

      <hr />
      <form action="/attendance/create" method="POST" style="width: 40%; margin: 0 auto;">
        <div class="form-group">
          <label for="EmployeeID" class="form-label">Nhân viên</label>
          <select class="form-control" id="EmployeeID" name="EmployeeID" required>
            <option value="">-- Chọn nhân viên --</option>
            <% employees.forEach(emp => { %>
              <option value="<%= emp.EmployeeID %>">
                <%= emp.EmployeeID %> - <%= emp.FullName %>
              </option>
            <% }) %>
          </select>
        </div>
        
  
        <div class="form-group">
          <label for="WorkDays" class="form-label">Số ngày làm</label>
          <input type="number" class="form-control" id="WorkDays" name="WorkDays" min="0" max="31" required>
        </div>
  
        <div class="form-group">
          <label for="AbsentDays" class="form-label">Số ngày vắng</label>
          <input type="number" class="form-control" id="AbsentDays" name="AbsentDays" min="0" max="31" value="0">
        </div>
  
        <div class="form-group">
          <label for="LeaveDays" class="form-label">Số ngày nghỉ phép</label>
          <input type="number" class="form-control" id="LeaveDays" name="LeaveDays" min="0" max="31" value="0">
        </div>
 
  
        <div class="form-group">
          <label for="AttendanceMonth" class="form-label">Tháng chấm công</label>
          <input type="month" class="form-control" id="AttendanceMonth" name="AttendanceMonth" required>
        </div>
        <button type="submit" class="btn btn-primary">Thêm phòng ban</button>
      </form>
    </div>
  </div>
</div>
