<div class="mt-5">
  <div class="row">
    <div class="col-12 mx-auto">
      <div class="d-flex justify-content-between">
        <h4>Thêm Phòng Ban</h4>
      </div>

      <hr />
      <form action="/departments/create" method="POST" style="width: 40%; margin: 0 auto;">
        <div class="form-group">
          <label for="departmentName">Tên phòng ban</label>
          <input type="text" class="form-control" id="departmentName" name="departmentName" placeholder="Nhập tên phòng ban" required>
        </div>

        <div class="form-group">
          <label for="managerId">ID người quản lý (nếu có)</label>
          <input type="number" class="form-control" id="managerId" name="managerId" placeholder="Nhập ID người quản lý">
        </div>

        <button type="submit" class="btn btn-primary">Thêm phòng ban</button>
      </form>
    </div>
  </div>
</div>
