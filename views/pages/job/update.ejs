<div class="mt-5">
    <div class="row">
      <div class="col-12 mx-auto">
        <div class="d-flex justify-content-between">
          <h4>Cập nhật Chức Vụ : <p><%= position.PositionName %></p></h4>
          <%- include('../../partials/alert', { messages: messages, time: "5000" }) %>
        </div>
  
        <hr />
  
        <form action="/jobs/edit/<%= position.PositionID %>?_method=PATCH" method="POST" style="width: 40%; margin: 0 auto;">
          <div class="form-group">
            <label for="PositionName">Cập nhật chức vụ</label>
            <input type="text" class="form-control" id="PositionName" name="jobName" value="<%= position.PositionName %>" placeholder="Nhập tên chức vụ" required>
          </div>
          <button type="submit" class="btn btn-warning">Cập nhật chức vụ</button>
        </form>
        
      </div>
    </div>
  </div>
  